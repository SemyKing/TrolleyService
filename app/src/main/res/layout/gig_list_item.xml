<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/gig_list_container">

    <TextView
            android:id="@+id/gig_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4d4d4d"
            app:layout_constraintEnd_toStartOf="@+id/gig_list_date" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="4dp" android:layout_marginStart="4dp"/>

    <TextView
            android:id="@+id/gig_list_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/placeholder_date_short"
            android:textStyle="normal|italic"
            android:textColor="#4d4d4d"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/gig_list_name" android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:layout_marginEnd="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>